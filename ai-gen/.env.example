# =========================================
# AI Service Environment Variables
# =========================================

# ----------------
# Azure OpenAI Configuration
# ----------------
OPENAI_API_KEY=your_azure_openai_api_key_here
OPENAI_BASE_URL=https://your-resource.openai.azure.com/openai/v1/
LLM_MODEL=gpt-4o

# ----------------
# Application Configuration
# ----------------
DEBUG=False
PORT=8002

# ----------------
# Database Configuration
# ----------------
# Format: PostgreSQL connection string JSON
DB_CONNECT_STRING={"ServerName":"your-db-host.com","CatalogName":"your_database_name","Username":"postgres","Password":"your_db_password","MaxPoolSize":1000}

# Or use individual variables (alternative):
# DATABASE_HOST=your-db-host.com
# DATABASE_PORT=5432
# DATABASE_NAME=your_database_name
# DATABASE_USER=postgres
# DATABASE_PASSWORD=your_db_password

# ----------------
# Railway-specific (auto-provided by Railway)
# ----------------
# These are automatically set by Railway, no need to configure:
# - PORT
# - RAILWAY_ENVIRONMENT
# - RAILWAY_PROJECT_ID
# - RAILWAY_SERVICE_ID

# ----------------
# Optional: Logging
# ----------------
# LOG_LEVEL=INFO
# PYTHONUNBUFFERED=1
